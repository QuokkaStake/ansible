[Unit]
Description=Cosmos Transactions Bot
After=network-online.target

[Service]
User={{ ansible_user }}
TimeoutStartSec=0
CPUWeight=95
IOWeight=95
ExecStart={{ ansible_user_dir }}/go/bin/cosmos-transactions-bot --config {{ ansible_user_dir }}/config/cosmos-transactions-bot.toml
Restart=always
RestartSec=2
LimitNOFILE=800000
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
